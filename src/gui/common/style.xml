    <!--    Main background color of all application -->
    <style id="mainBackground">
        <state>
            <imagePainter method="panelBackground"
                          path="images/Color_EDF1F8_mainBackground.png"
                          sourceInsets="0 0 0 0"/>
        </state>
    </style>
    <bind style="mainBackground" type="name" key="mainBackground"/>

    <!--    Black color that is used in some places -->
    <style id="blackBackground">
        <state>
            <imagePainter method="panelBackground"
                          path="images/Color_000000_blackBackground.png"
                          sourceInsets="0 0 0 0"/>
        </state>
    </style>
    <bind style="blackBackground" type="name" key="blackBackground"/>

    <!--    White color that is used in some places -->
    <style id="whiteBackground">
        <state>
            <imagePainter method="panelBackground"
                          path="images/Color_FFFFFF_whiteBackground.png"
                          sourceInsets="0 0 0 0"/>
        </state>
    </style>
    <bind style="whiteBackground" type="name" key="whiteBackground|sellPanelKeypadPanel|dialogWindow"/>

    <!--    Beige color that is used in some places -->
    <style id="beigeBackground">
        <state>
            <imagePainter method="panelBackground"
                          path="images/Color_C8C8C8_beigeBackground.png"
                          sourceInsets="0 0 0 0"/>
        </state>
    </style>
    <bind style="beigeBackground" type="name" key="beigeBackground"/>



    <!--    White buttons without borders -->
    <style id="keypadButton">
        <!-- Shift the text one pixel when pressed -->
        <property key="Button.textShiftOffset" type="integer" value="1"/>
        <state>
            <imagePainter method="buttonBackground"
                          path="images/keypadButton.png"
                          sourceInsets="0 0 0 0"/>
        </state>
        <state value="PRESSED">
            <imagePainter method="buttonBackground"
                          path="images/keypadButton_Pressed.png"
                          sourceInsets="0 0 0 0"/>
        </state>
    </style>
    <bind style="keypadButton" type="name" key="keypadButton"/>

    <!--    Beige buttons without borders -->
    <style id="keypadButtonBeige">
        <!-- Shift the text one pixel when pressed -->
        <property key="Button.textShiftOffset" type="integer" value="1"/>
        <state>
            <imagePainter method="buttonBackground"
                          path="images/keypadButtonBeige.png"
                          sourceInsets="0 0 0 0"/>
        </state>
        <state value="PRESSED">
            <imagePainter method="buttonBackground"
                          path="images/keypadButtonBeige_Pressed.png"
                          sourceInsets="0 0 0 0"/>
        </state>
    </style>
    <bind style="keypadButtonBeige" type="name" key="keypadButtonBeige"/>

    <!--    Dark buttons without borders -->
    <style id="darkButton">
        <!-- Shift the text one pixel when pressed -->
        <property key="Button.textShiftOffset" type="integer" value="1"/>
        <state>
            <imagePainter method="buttonBackground"
                          path="images/buttonDark.png"
                          sourceInsets="0 0 0 0"/>
        </state>
        <state value="PRESSED">
            <imagePainter method="buttonBackground"
                          path="images/buttonDark_Pressed.png"
                          sourceInsets="0 0 0 0"/>
        </state>
    </style>
    <bind style="darkButton" type="name" key="darkButton"/>

    <!--    Light buttons without borders -->
    <style id="lightButton">
        <!-- Shift the text one pixel when pressed -->
<!--        <property key="Button.textShiftOffset" type="integer" value="1"/>-->
        <state>
            <imagePainter method="buttonBackground"
                          path="images/buttonLight.png"
                          sourceInsets="0 0 0 0"/>
        </state>
        <state value="PRESSED">
            <imagePainter method="buttonBackground"
                          path="images/buttonLight_Pressed.png"
                          sourceInsets="0 0 0 0"/>
        </state>
    </style>
    <bind style="lightButton" type="name" key="lightButton"/>
</synth>