    <style id="mainBackground">
        <state>
            <imagePainter method="panelBackground"
                          path="images/mainBackgroundColor_EDF1F8.png"
                          sourceInsets="0 0 0 0"/>
        </state>
    </style>
    <bind style="mainBackground" type="name" key="mainBackground"/>

    <style id="blackBackground">
        <state>
            <imagePainter method="panelBackground"
                          path="images/blackBackgroundColor_000000.png"
                          sourceInsets="0 0 0 0"/>
        </state>
    </style>
    <bind style="blackBackground" type="name" key="blackBackground"/>






